					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{apiUrl}}/auth",
					"host": [
						"{{apiUrl}}"
					],
					"path": [
						"auth"
					]
				}
			},
			"response": []
		},
